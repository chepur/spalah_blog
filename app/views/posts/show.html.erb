<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= @post.title %></h1>
    <br>
    <p>
      <%= @post.content %>
    </p>
    <br>
    <%= image_tag(@post.image_url(:thumb).to_s) if @post.image? %>
    <br>
    <br>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Delete it', post_path(@post),
                method: :delete,
                data: {confirm: 'Are you sure?'} %>
    <br>
    <%= link_to 'Go Back', posts_path %>
  </div>
  <br>
</div>

